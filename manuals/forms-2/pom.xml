      <plugin>
        <groupId>com.agilejava.docbkx</groupId>
        <artifactId>docbkx-maven-plugin</artifactId>
        <version>2.0.17</version>
        <executions>
          <execution>
            <id>forms2</id>
            <phase>compile</phase>
            <goals>
              <goal>generate-pdf</goal>
              <!--<goal>generate-xhtml5</goal>-->
            </goals>
            <configuration>
              <draftMode>no</draftMode>
              <sourceDirectory>${basedir}/src</sourceDirectory>
              <foCustomization>src/style.xslt</foCustomization>
              <includes>main.xml</includes>
            </configuration>
          </execution>

        </executions>

        <configuration>
          <!-- shared configuration -->
          <generatedSourceDirectory>${project.build.directory}/generated</generatedSourceDirectory>
          <xincludeSupported>true</xincludeSupported>
          <highlightSource>0</highlightSource>
          <paperType>A4</paperType>
          <fop1Extensions>1</fop1Extensions>
        </configuration>

        <dependencies>
          <dependency>
            <groupId>net.sf.docbook</groupId>
            <artifactId>docbook-xml</artifactId>
            <version>5.0-all</version>
            <classifier>resources</classifier>
            <type>zip</type>
            <scope>runtime</scope>
          </dependency>
        </dependencies>

      </plugin>
    </plugins>
  </build>
